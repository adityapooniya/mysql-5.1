# ==== Purpose ====
#
# verify that slave_max_allowed_packet works

source include/master-slave.inc;
source include/have_binlog_format_statement.inc;

call mtr.add_suppression("Slave I/O: Got fatal error 1236 from master when reading data from binary log:");
call mtr.add_suppression(".*Event too big.*");

--disable_warnings
drop database if exists foobar;
--enable_warnings

connection master;
create database foobar;
use foobar;
create table `t1` (`f1` LONGTEXT) ENGINE=MyISAM;

sync_slave_with_master;

connection slave;
--source include/stop_slave.inc

connection master;

--error ER_NET_PACKET_TOO_LARGE
INSERT INTO `t1`(`f1`) VALUES ('');

disconnect master;
connect (master,localhost,root,,foobar);
select length(f1) from t1;

# Now insert a statement on the master that will get a max-packet error when
# replicated to the slave

connection slave;
use foobar;
--source include/stop_slave.inc

connection master;
SET @@global.max_allowed_packet=8192;
SET @@global.net_buffer_length=8192;

# Reconnect to master for new setting to take effect
disconnect master;
connect (master,localhost,root,,foobar);

--echo This should succeed
INSERT INTO `t1`(`f1`) VALUES ('');

select length(f1) from t1;

#
# Now confirm there is an error in replication
#

SET @@global.max_allowed_packet=2048;
SET @@global.net_buffer_length=2048;

# Reconnect to master for new setting to take effect
disconnect master;
connect (master,localhost,root,,foobar);

connection slave;
start slave;
sleep 1;
--echo Confirm slave is not running and has no rows
SHOW STATUS LIKE 'Slave_running';
select length(f1) from t1;
--source include/stop_slave.inc

# Now fix the settings to let the event reach the slave
connection slave;
SET @@global.max_allowed_packet=8192;
SET @@global.net_buffer_length=8192;

connection master;
SET @@global.max_allowed_packet=8192;
SET @@global.net_buffer_length=8192;

# Reconnect to master for new setting to take effect
disconnect master;
connect (master,localhost,root,,foobar);

connection slave;
--let $slave_timeout=3
--source include/start_slave.inc

connection master;
sync_slave_with_master;

connection slave;
--echo Confirm slave is running and has 1 row
SHOW STATUS LIKE 'Slave_running';
select length(f1) from t1;

--source include/stop_slave.inc

#
# Now confirm that slave_max_allowed_packet overrides max_allowed_packet
#

connection master;

INSERT INTO `t1`(`f1`) VALUES ('');

# Now fix the settings to prevent the event reach the slave
SET @@global.max_allowed_packet=2048;
SET @@global.net_buffer_length=2048;

connection slave;
SET @@global.max_allowed_packet=2048;
SET @@global.net_buffer_length=2048;

# Reconnect to master for new setting to take effect
disconnect master;
connect (master,localhost,root,,foobar);
--echo Data on master
select length(f1) from t1;

--echo Confirm the slave did not get the event
connection slave;
start slave;
sleep 1;
SHOW STATUS LIKE 'Slave_running';
select length(f1) from t1;
--source include/stop_slave.inc

# Set slave_max_allowed_packet on master
connection master;
SET @@global.slave_max_allowed_packet=8192;
disconnect master;
connect (master,localhost,root,,foobar);

--echo Confirm the slave gets the event after setting slave_max_allowed_packet
connection slave;
SET @@global.slave_max_allowed_packet=8192;
--let $slave_timeout=3
--source include/start_slave.inc

connection master;
sync_slave_with_master;

connection slave;
SHOW STATUS LIKE 'Slave_running';
select length(f1) from t1;

connection master;
drop database foobar;
save_master_pos;

--echo Sync slave after dropping database
connection slave;
sync_with_master;

--echo ==== clean up ====
connection master;
SET @@global.slave_max_allowed_packet=0;
SET @@global.max_allowed_packet=2048;
SET @@global.net_buffer_length=2048;

# slave is stopped
connection slave;
SET @@global.slave_max_allowed_packet=0;

# End of tests
