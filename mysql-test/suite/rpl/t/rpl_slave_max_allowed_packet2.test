# ==== Purpose ====
#
# verify that slave_max_allowed_packet works

source include/master-slave.inc;
source include/have_binlog_format_statement.inc;

call mtr.add_suppression(".*net_buffer_length .* is set to be larger than max_allowed_packet.*");

--disable_warnings
drop database if exists foobar;
--enable_warnings

connection master;
create database foobar;
use foobar;
create table `t1` (`f1` LONGTEXT) ENGINE=MyISAM;

SELECT @@global.slave_max_allowed_packet;
SELECT @@global.max_allowed_packet;
SELECT @@global.net_buffer_length;

# This should succeed
INSERT INTO `t1`(`f1`) VALUES ('');

save_master_pos;

# confirm data reached the slave

connection slave;
SELECT @@global.slave_max_allowed_packet;
SELECT @@global.max_allowed_packet;
SELECT @@global.net_buffer_length;
sync_with_master;

SHOW STATUS LIKE 'Slave_running';
select count(*) from foobar.`t1` /* must be 1 */;
select length(f1) from foobar.t1;

connection master;
drop database foobar;
save_master_pos;

connection slave;
sync_with_master;
--source include/rpl_end.inc
