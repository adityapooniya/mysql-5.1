# --source include/have_pbxt.inc
# --source include/have_innodb.inc

CREATE TABLE t1 (a INT PRIMARY KEY) ENGINE=innodb;
CREATE TABLE t2 (a INT PRIMARY KEY) ENGINE=pbxt;

connect(con1,localhost,root,,);
connect(con2,localhost,root,,);

connection default;
SET TRANSACTION ISOLATION LEVEL REPEATABLE READ;
BEGIN;
SELECT * FROM t1;

connection con1;
BEGIN;
INSERT INTO t1 VALUES (1);
COMMIT;

connection con2;
BEGIN;
INSERT INTO t2 VALUES (1);
COMMIT;

connection default;
SELECT * FROM t1;
SELECT * FROM t2;
COMMIT;

# Now try again with START TRANSACTION WITH CONSISTENT SNAPSHOT.
connection default;
SET TRANSACTION ISOLATION LEVEL REPEATABLE READ;
START TRANSACTION WITH CONSISTENT SNAPSHOT;
SELECT * FROM t1;

connection con1;
BEGIN;
INSERT INTO t1 VALUES (2);
COMMIT;

connection con2;
BEGIN;
INSERT INTO t2 VALUES (2);
COMMIT;

connection default;
SELECT * FROM t1;
SELECT * FROM t2;
COMMIT;

DROP TABLE t1;
DROP TABLE t2;

# Try again with table types reversed.
CREATE TABLE t1 (a INT PRIMARY KEY) ENGINE=pbxt;
CREATE TABLE t2 (a INT PRIMARY KEY) ENGINE=innodb;

connection default;
SET TRANSACTION ISOLATION LEVEL REPEATABLE READ;
BEGIN;
SELECT * FROM t1;

connection con1;
BEGIN;
INSERT INTO t1 VALUES (1);
COMMIT;

connection con2;
BEGIN;
INSERT INTO t2 VALUES (1);
COMMIT;

connection default;
SELECT * FROM t1;
SELECT * FROM t2;
COMMIT;

# Now try again with START TRANSACTION WITH CONSISTENT SNAPSHOT.
connection default;
SET TRANSACTION ISOLATION LEVEL REPEATABLE READ;
START TRANSACTION WITH CONSISTENT SNAPSHOT;
SELECT * FROM t1;

connection con1;
BEGIN;
INSERT INTO t1 VALUES (2);
COMMIT;

connection con2;
BEGIN;
INSERT INTO t2 VALUES (2);
COMMIT;

connection default;
SELECT * FROM t1;
SELECT * FROM t2;
COMMIT;

DROP TABLE t1;
DROP TABLE t2;

# bug 509968: START TRANSACTION WITH CONSISTENT SNAPSHOT breaks transactional flow
# happened because XTThread data was not inited properly and auto-commit flag
# (raised by the SELECT precedding the transaction) was not reset

CREATE TABLE t1 (i INT) ENGINE=PBXT;
SELECT * FROM t1;
START TRANSACTION WITH CONSISTENT SNAPSHOT;
INSERT INTO t1 VALUES (1);
ROLLBACK;
SELECT * FROM t1;
DROP TABLE t1;

--disable_query_log
drop database pbxt;
--enable_query_log
